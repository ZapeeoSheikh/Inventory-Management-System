@using Inventory_Management_System
@model List<Inventory_Management_System.Models.Product>
@{
    ViewBag.Title = "Display";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="col-lg-12">

    <div class="col-lg-push-1 col-lg-10">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" style="display: flex; justify-content: center">
                <div class="item active">
                    <img src="~/images/d1.jpg" alt="Display 01" style="height: 200px">

                </div>

                <div class="item">
                    <img src="~/images/d2.jpg" alt="Display 02" style="height: 200px">
                </div>

                <div class="item">
                    <img src="~/images/d3.png" alt="Display 03" style="height: 200px">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="col-lg-12 " style="margin: 20px">
            <div class="col-lg-3 panel">
                <img src="~/images/d1.jpg" class="panel-body col-lg-12" style="height: 190px" />
                <div class="panel-footer">
                    <p> Wireless Handfree 5.0 Bass Sound good quality</p>
                    <h3 style="font-weight: 600"><span style="font-size: 15px; ">PKR</span>396</h3>
                    <p>572 sold <span style="font-size: 12px"><span class="fa fa-star checked" style="color: goldenrod"></span> 4.6</span></p>
                </div>
            </div>
            @foreach (var i in Model)
            {
                <div class="col-lg-3 panel">
                    <img src="~/images/d1.jpg" class="panel-body col-lg-12" style="height: 190px"/>
                    <div class="panel-footer">
                        <p> @i.desc</p>
                        <h3 style="font-weight: 600"><span style="font-size: 15px;">PKR</span>@i.price</h3>
                        <p>@i.quantity sold <span style="font-size: 12px"><span class="fa fa-star checked" style="color: goldenrod"></span> @i.rating</span></p>
                    </div>
                </div>
            }
